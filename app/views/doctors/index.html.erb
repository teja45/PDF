<p id="notice"><%= notice %></p>

<div class="main_left">

  <h1>Listing Doctors</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>School received degree from</th>
        <th>Years in practice</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.name %></td>
          <td><%= doctor.address %></td>
          <td><%= doctor.city %></td>
          <td><%= doctor.state %></td>
          <td><%= doctor.zip %></td>
          <td><%= doctor.school_received_degree_from %></td>
          <td><%= doctor.years_in_practice %></td>
          <td><%= link_to 'Show list of appointments', doctor %></td>
          <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
          <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

<div class="main_right">
  <%= link_to 'New Doctor', new_doctor_path %>
  </br>
  <%= link_to 'Book Appointment', new_appointment_path %>
  
</div>